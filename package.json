{
  "name": "redux-wow",
  "version": "1.0.0",
  "description": "Most simple (opinionated) way to use Redux in your application.",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" index.d.ts \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.{js,ts}\" index.d.ts \"**/*.md\"",
    "lint": "eslint src test",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "rollup -c",
    "prepare": "npm run clean && npm run format:check && npm run lint && npm test",
    "examples:lint": "eslint examples",
    "examples:test": "cross-env CI=true babel-node examples/testAll.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nsisodiya/redux-wow.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nsisodiya/redux-wow/issues"
  },
  "homepage": "https://github.com/nsisodiya/redux-wow#readme",
  "dependencies": {
    "immer": "^1.9.3"
  },
  "devDependencies": {
    "rollup": "^1.0.0"
  }
}
